<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Author", :author %></th>
			<th><%= casein_sort_link "Date", :date %></th>
			<th><%= casein_sort_link "Body", :body %></th>
			<th><%= casein_sort_link "Image", :image %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% editorials.each do |editorial| %>
		<tr>
			<td><%= casein_table_cell_link editorial.title, casein_editorial_path(editorial) %></td>
			<td><%= casein_table_cell_link editorial.author, casein_editorial_path(editorial) %></td>
			<td><%= casein_table_cell_link editorial.date, casein_editorial_path(editorial) %></td>
			<td><%= casein_table_cell_link editorial.body, casein_editorial_path(editorial) %></td>
			<td><%= casein_table_cell_link editorial.image, casein_editorial_path(editorial) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_editorial_path(editorial), :method => :delete, :data => { :confirm => "Are you sure you want to delete this editorial?" }) %>
			</td>
		</tr>
	<% end %>
</table>