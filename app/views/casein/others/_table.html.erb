<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Author", :author %></th>
			<th><%= casein_sort_link "Date", :date %></th>
			<th><%= casein_sort_link "Body", :body %></th>
			<th><%= casein_sort_link "Image", :image %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% others.each do |other| %>
		<tr>
			<td><%= casein_table_cell_link other.title, casein_other_path(other) %></td>
			<td><%= casein_table_cell_link other.author, casein_other_path(other) %></td>
			<td><%= casein_table_cell_link other.date, casein_other_path(other) %></td>
			<td><%= casein_table_cell_link other.body, casein_other_path(other) %></td>
			<td><%= casein_table_cell_link other.image, casein_other_path(other) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_other_path(other), :method => :delete, :data => { :confirm => "Are you sure you want to delete this other?" }) %>
			</td>
		</tr>
	<% end %>
</table>